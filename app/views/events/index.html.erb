<header id="site-header">
	<h1 class="animated fadeInDown">[Title] <span>[Headline]</span></h1>
	<nav id="events-nav">
		<a class="current animated bounce" href="#">Future</a>
		<a class="animated fadeIn" href="#">Past</a>
	</nav>
</header>

<article id="main">
	<section class="animated fadeInLeft active">
		<% @future_events_at_date.each do |date, events| %>
			<div class="content-wrap">
				<div class="content">
					<div class="date-wrap">
						<div><i class="fa fa-calendar fa-4x"></i></div>
						<date><%= date.strftime('%d %b').upcase %></date>
					</div>
					<div class="events-wrap">
						<ul>
							<% events.each do |event| %>
								<li class="event">
									<input type="checkbox" checked>
									<i class="arrow"></i>
									<h2><%= event.title %></h2>
									<p class="actions first">
										<%= link_to 'Edit', edit_event_path(event) %>
										<%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
									</p>
									<p><%= event.description %></p>
									<p class="details">
										<span><i class="fa fa-clock-o fa-fw"></i></span>              
										<%= event.fromTime.strftime("%I:%M%p") %> - <%= event.untilTime.strftime("%I:%M%p") %>
									</p>
									<p class="details">
										<span><i class="fa fa-map-marker fa-fw"></i></span>
										<%= event.address1 %>
									</p>
									<p class="details">
										<span><i class="fa fa-phone fa-fw"></i></span>
										<%= event.phone %>
									</p>
									<p class="details">
										<span><i class="fa fa-envelope fa-fw"></i></span>
										<%= event.email %>
									</p>
									<p class="details">
										<span><i class="fa fa-globe fa-fw"></i></span>
										<%= event.url %>
									</p>
								</li>
							<% end %>
						</ul>  
					</div> <!-- .events-wrap -->
				</div> <!-- .content -->
			</div> <!-- .content-wrap -->
		<% end %><!-- @future_events_at_date -->
	</section>
	
	<!-- PAST EVENTS -->
	<section class="animated fadeInRight">
		<% @past_events_at_date.each do |date, events| %>
			<div class="content-wrap">
				<div class="content">
					<div class="date-wrap">
						<div><i class="fa fa-calendar fa-4x"></i></div>
						<date><%= date.strftime('%d %b').upcase %></date>
					</div>
					<div class="events-wrap">
						<ul>
							<% events.each do |event| %>
								<li class="event">
									<input type="checkbox" checked>
									<i class="arrow"></i>
									<h2><%= event.title %></h2>
									<p class="actions first">
										<%= link_to 'Edit', edit_event_path(event) %>
										<%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
									</p>
									<p><%= event.description %></p>
									<p class="details">
										<span><i class="fa fa-clock-o fa-fw"></i></span>              
										<%= event.fromTime.strftime("%I:%M%p") %> - <%= event.untilTime.strftime("%I:%M%p") %>
									</p>
									<p class="details">
										<span><i class="fa fa-map-marker fa-fw"></i></span>
										<%= event.address1 %>
									</p>
									<p class="details">
										<span><i class="fa fa-phone fa-fw"></i></span>
										<%= event.phone %>
									</p>
									<p class="details">
										<span><i class="fa fa-envelope fa-fw"></i></span>
										<%= event.email %>
									</p>
									<p class="details">
										<span><i class="fa fa-globe fa-fw"></i></span>
										<%= event.url %>
									</p>
								</li>
							<% end %>
						</ul>  
					</div> <!-- .events-wrap -->
				</div> <!-- .content -->
			</div> <!-- .content-wrap -->
		<% end %><!-- @past_events_at_date -->
	</section>


</article> <!-- #main -->

<h1>Listing events</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Fromdate</th>
			<th>Fromtime</th>
			<th>Untiltime</th>
			<th>Untildate</th>
			<th>Address1</th>
			<th>Address2</th>
			<th>Zip</th>
			<th>Description</th>
			<th>Url</th>
			<th>Email</th>
			<th>Phone</th>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td><%= event.title %></td>
				<td><%= event.fromDate %></td>
				<td><%= event.fromTime %></td>
				<td><%= event.untilTime %></td>
				<td><%= event.untilDate %></td>
				<td><%= event.address1 %></td>
				<td><%= event.address2 %></td>
				<td><%= event.zip %></td>
				<td><%= event.description %></td>
				<td><%= event.url %></td>
				<td><%= event.email %></td>
				<td><%= event.phone %></td>
				<td><%= event.user %></td>
				<td><%= link_to 'Show', event %></td>
				<td><%= link_to 'Edit', edit_event_path(event) %></td>
				<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

